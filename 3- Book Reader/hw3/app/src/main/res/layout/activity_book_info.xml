<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393A39"
    tools:context=".BookInfoActivity">

    <TextView
        android:id="@+id/book_title"
        android:layout_width="381dp"
        android:layout_height="30dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="13dp"
        android:background="@color/material_dynamic_neutral_variant70"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textColor="@color/material_dynamic_neutral10"
        android:textColorHint="#F1EAEA"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/book_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_goneMarginLeft="16dp"
        tools:ignore="MissingConstraints"
        tools:text="Title" />

    <TextView
        android:id="@+id/book_author"
        android:layout_width="385dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#F1EAEA"
        android:textColorHint="#E8DFDF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_title"
        app:layout_goneMarginStart="16dp"
        tools:text="Author" />

    <TextView
        android:id="@+id/book_publisher"
        android:layout_width="385dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#F1EAEA"
        android:textColorHint="#F1EAEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_author"
        app:layout_goneMarginStart="16dp"
        tools:text="Publisher" />

    <TextView
        android:id="@+id/book_year"
        android:layout_width="385dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#F1EAEA"
        android:textColorHint="#E8DFDF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_publisher"
        app:layout_goneMarginStart="16dp"
        tools:text="year" />

    <TextView
        android:id="@+id/book_version"
        android:layout_width="385dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#F1EAEA"
        android:textColorHint="#F1EAEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_year"
        app:layout_goneMarginStart="16dp"
        tools:text="version" />

    <TextView
        android:id="@+id/book_summary"
        android:layout_width="386dp"
        android:layout_height="253dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="serif"
        android:textColor="#F1EAEA"
        android:textColorHint="#F1EAEA"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_version"
        app:layout_goneMarginStart="16dp"
        tools:text="summary" />

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="387dp"
        android:layout_height="258dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/material_dynamic_neutral10"
        app:layout_constraintBottom_toTopOf="@id/book_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>